//read and write first name
#include "std_lib_facilities.h"

int main()
{
cout<<"Please enter your first name (followed by 'enter'):\n";
string first_name;
cin>>first_name;
cout<<"Hello,"<<first_name<<"!\n";
cout<<"How are you? I am fine. I miss you.\n";
cout<<"Tell me one of your friend's name.\n";
string friend_name;
cin>>friend_name;
cout<<"Is " <<friend_name<< " a male or a female?(write m or f)\n";
char friend_sex;
cin>>friend_sex;
if (friend_sex == 'm'){
cout<<"If you see "<<friend_name<<" please ask him to call me.\n";
}else{
cout<<"If you see "<<friend_name<<" please ask her to call me.\n";
}
cout<<"How old is "<<friend_name<<"?\n";
int friend_age;
cin>> friend_age;
cout<<"I hear you just had birthday and you are " <<friend_age<< " years old.\n"; 
if (friend_age == 0) {
cout<<"simple_error(you're kidding!)";
}else if (0 < friend_age < 12) { 
cout<<"Next year you will be one year older.";
}else if (friend_age == 17) {
cout<<"Next year you will be able to vote.";
}else if (70 < friend_age <110) {
cout<<"I hope you are enjoying retirement.";
}else if (friend_age > 110) {
cout<<"simple_error(you are kidding!)";
}
cout<<"\nYours Sincerely,\n\n";
}
